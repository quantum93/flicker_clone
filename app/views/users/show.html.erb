<h1><%= @user.email %></h1>

<% if @user.photos.any? %>
  <h4>Here are the photos for this user:</h4>

  <% @user.photos.each do |photo| %>
    <ul>
      <li>
        <%= link_to photo.title, user_photo_path(@user, photo) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No photos are listed for this user.</p>
<% end %>

<p><%= link_to "Add a photo", new_user_photo_path(@user) %></p>

<p><%= link_to "Edit", edit_user_path(@user) %></p>
<p><%= link_to "Delete", user_path(@user),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to users", users_path %></p>
