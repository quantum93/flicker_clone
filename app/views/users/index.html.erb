<h1>Users</h1>

<% if current_user %>
  <ul>
    <% @users.each do |user| %>
    <li> <%= link_to user.email, user_path(user) %></li>
    <% end %>
  </ul>
<% else %>
  <p>Please sign in in order to see the list of users.</p>
<% end %>

<% if current_user.try(:admin?) %>
  <h1>I am an admin </h1>
  <p><%= link_to "Create New User", new_user_session_path %></p>
<% end %>
